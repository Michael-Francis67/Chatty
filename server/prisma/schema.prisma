generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id          String    @id @default(cuid())
  firstName   String    @map("first_name") @db.VarChar(255)
  lastName    String    @map("last_name") @db.VarChar(255)
  email       String    @unique @db.VarChar(255)
  username    String    @unique @db.VarChar(255)
  password    String    @db.VarChar(255)
  profilePic  String?   @map("profile_pic") @db.VarChar(255)
  secureUrl   String?   @map("secure_url") @db.VarChar(255)
  publicId    String?   @map("public_id") @db.VarChar(255)
  uniqueCode  String?    @unique @map("unique_code") @db.VarChar(255)
  token       String?   @default("") @map("token") @db.VarChar(255)
  tokenExpiry DateTime? @map("token_expiry")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  // Relations
  chats            Chat[]         @relation("ChatParticipants")
  messages         ChatMessage[]  @relation("SenderMessages")
  receivedMessages ChatMessage[]  @relation("ReceiverMessages")
  reactions        ChatMessage[]  @relation("MessageReactions")
  groups           Group[]        @relation("GroupMembers")
  groupMessages    GroupMessage[] @relation("GroupMessageSender")
  groupReactions   GroupMessage[] @relation("GroupMessageReactions")

  @@map("users")
}

model Chat {
  id            String        @id @default(cuid())
  participants  User[]        @relation("ChatParticipants")
  messages      ChatMessage[] @relation("ChatMessages")
  lastMessageAt DateTime?     @map("last_message_at")
  createdAt     DateTime      @default(now()) @map("created_at")
  updatedAt     DateTime      @updatedAt @map("updated_at")

  @@map("chats")
}

model ChatMessage {
  id         String   @id @default(cuid())
  sender     User     @relation("SenderMessages", fields: [senderId], references: [id])
  senderId   String   @map("sender_id") @db.VarChar(255)
  receiver   User?    @relation("ReceiverMessages", fields: [receiverId], references: [id])
  receiverId String?  @map("receiver_id") @db.VarChar(255)
  chat       Chat     @relation("ChatMessages", fields: [chatId], references: [id])
  chatId     String   @map("chat_id") @db.VarChar(255)
  text       String?  @db.Text
  image      String?  @db.VarChar(255)
  audio      String?  @db.VarChar(255)
  file       String?  @db.VarChar(255)
  read       Boolean  @default(false)
  reactions  Json[]   @map("reactions")
  reactedBys User[]   @relation("MessageReactions")
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  @@map("chat_messages")
}

model Group {
  id          String         @id @default(cuid())
  name        String         @db.VarChar(255)
  description String?
  groupPic    String?        @map("group_pic") @db.VarChar(255)
  secureUrl   String?        @map("secure_url") @db.VarChar(255)
  publicId    String?        @map("public_id") @db.VarChar(255)
  members     User[]         @relation("GroupMembers")
  messages    GroupMessage[] @relation("GroupMessages")
  createdAt   DateTime       @default(now()) @map("created_at")
  updatedAt   DateTime       @updatedAt @map("updated_at")

  @@map("groups")
}

model GroupMessage {
  id         String   @id @default(cuid())
  sender     User     @relation("GroupMessageSender", fields: [senderId], references: [id])
  senderId   String   @map("sender_id") @db.VarChar(255)
  group      Group    @relation("GroupMessages", fields: [groupId], references: [id])
  groupId    String   @map("group_id") @db.VarChar(255)
  text       String?  @db.Text
  image      String?  @db.VarChar(255)
  audio      String?  @db.VarChar(255)
  file       String?  @db.VarChar(255)
  reactions  Json[]   @map("reactions")
  reactedBys User[]   @relation("GroupMessageReactions")
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  @@map("group_messages")
}
